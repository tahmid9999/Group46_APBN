<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.groupfourtysix.group46_apbn.Summy.BoardingGateOfficerController">

    <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, lightgray, 3, 0, 1, 1);" text="Boarding Control Panel" />

        <HBox alignment="CENTER" spacing="15">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Flight:" />
            <ComboBox fx:id="flightComboBox" prefWidth="200" promptText="Select Flight" style="-fx-background-color: white; -fx-border-color: #2980b9;" />
            <Button onAction="#onLoadManifest" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;" text="Load Manifest" />
        </HBox>

        <TableView fx:id="passengerTable" prefHeight="300" style="-fx-border-color: #95a5a6;">
            <columns>
                <TableColumn fx:id="colPassengerName" prefWidth="366.4" text="Passenger Name" />
                <TableColumn fx:id="colBoardingPass" prefWidth="240.8" text="Boarding Pass No." />
                <TableColumn fx:id="colStatus" prefWidth="152.8" text="Status" />
            </columns>
        </TableView>

        <HBox alignment="CENTER" spacing="15">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #34495e;" text="Scan Boarding Pass:" />
            <TextField fx:id="boardingPassInput" promptText="e.g., BP12345" style="-fx-background-color: white; -fx-border-color: #27ae60;" />
            <Button onAction="#onVerifyBoardingPass" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="Verify" />
        </HBox>

        <Label fx:id="verificationResult" style="-fx-font-size: 14px; -fx-font-weight: bold;" textFill="green" />

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#onFinalizeBoarding" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="Finalize Boarding" />
            <Button onAction="#onGenerateReport" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Generate Report" />
         <Button mnemonicParsing="false" onAction="#onDenyBoarding" text="Deny Boarding" />
        </HBox>

    </VBox>
</AnchorPane>
